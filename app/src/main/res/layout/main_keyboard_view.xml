<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_silver"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/switchToEmojiKeyboard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:background="@drawable/btn_background"
            android:src="@drawable/ic_emoji"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/tabButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:background="@drawable/btn_background"
            android:src="@drawable/ic_keyboard_tab"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/switchToSelectionKeyboard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:background="@drawable/btn_background"
            android:src="@drawable/ic_open_with_black"
            android:scaleType="centerInside" />

        <Button
            android:id="@+id/altButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:background="@drawable/btn_background"
            android:text="ALT"
            android:scaleType="centerInside" />

        <Button
            android:id="@+id/ctrlButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:background="@drawable/btn_background"
            android:text="CTRL"
            android:scaleType="centerInside" />

    </LinearLayout>
    <inc.flide.eightvim.views.mainKeyboard.XboardView
        android:id="@+id/xboardView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</LinearLayout>
